# GW2 WvW Builder - Staging Environment Variables
# Copy this file to .env.staging and fill in the values

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_USER=gw2_user
POSTGRES_PASSWORD=change_me_secure_password_staging
POSTGRES_DB=gw2_wvw_builder

# ==========================================
# Redis Cache
# ==========================================
REDIS_PASSWORD=change_me_redis_password_staging

# ==========================================
# Backend API
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_me_super_secret_jwt_key_min_32_chars
REFRESH_SECRET_KEY=change_me_refresh_token_secret_key_min_32_chars

# GW2 API Key (get from https://account.arena.net/applications)
GW2_API_KEY=your_gw2_api_key_here

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ==========================================
# Frontend
# ==========================================
VITE_API_URL=http://localhost:8001
VITE_ENVIRONMENT=staging

# ==========================================
# Monitoring (Optional)
# ==========================================
SENTRY_DSN=
VITE_SENTRY_DSN=

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_grafana_password_staging

# ==========================================
# SSL/TLS (Optional)
# ==========================================
# Set to 'true' to enable HTTPS in nginx
ENABLE_HTTPS=false

# ==========================================
# Backup
# ==========================================
# Backup schedule (cron format)
BACKUP_SCHEDULE=@daily
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=3
