# Test Environment
ENVIRONMENT=test
DEBUG=True
TESTING=True

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="GW2 WvW Builder API - Test"
SERVER_NAME=testserver
SERVER_HOST=http://testserver

# Security
SECRET_KEY=test-super-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=1  # 1 minute for faster tests
ALGORITHM=HS256

# CORS
BACKEND_CORS_ORIGINS=[]

# Database Configuration - Use SQLite in-memory for tests
DATABASE_TYPE=sqlite
SQLALCHEMY_DATABASE_URI=sqlite+aiosqlite:///:memory:
ASYNC_SQLALCHEMY_DATABASE_URI=sqlite+aiosqlite:///:memory:

# Database connection pool settings
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_RECYCLE=3600
POOL_TIMEOUT=30
POOL_PRE_PING=True
SQL_ECHO=False
SQL_ECHO_POOL=False

# Cache
REDIS_URL=redis://localhost:6379/1
CACHE_ENABLED=False
CACHE_TTL=300

# Test user for authentication
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword
TEST_USER_FULLNAME=Test User
TEST_ACCESS_TOKEN=test-access-token
DATABASE_URL=sqlite:///:memory:
SQLALCHEMY_DATABASE_URI=sqlite:///:memory:
ASYNC_SQLALCHEMY_DATABASE_URI=sqlite+aiosqlite:///:memory:

# Test User
FIRST_SUPERUSER=test@example.com
FIRST_SUPERUSER_PASSWORD=testpassword

# Logging
LOG_LEVEL=WARNING
LOG_TO_FILE=False
