# Database
DATABASE_URL=sqlite+aiosqlite:///./gw2_wvwbuilder.db
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# Security - CRITICAL: Generate strong keys with: openssl rand -hex 32
# NEVER use these example values in production!
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_KEY_GENERATED_WITH_OPENSSL
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_KEY_GENERATED_WITH_OPENSSL
JWT_REFRESH_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_KEY_GENERATED_WITH_OPENSSL
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS (comma-separated list of origins)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Application
PROJECT_NAME=GW2 WvW Builder
API_V1_STR=/api/v1
DEBUG=True

# Email (if applicable)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=no-reply@example.com
EMAILS_FROM_NAME="GW2 WvW Builder"

# Sentry (if applicable)
SENTRY_DSN=your-sentry-dsn